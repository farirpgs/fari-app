{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "jsx": "react",
    "outDir": "./.tsc",
    "skipLibCheck": true,
    "lib": ["es2015", "es2016", "es2017", "ES2018", "ES2019", "dom"],
    "strict": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "types": ["vite/client", "jest"]
  },
  "include": ["lib/**/*", "stories/**/*"],
  "exclude": ["node_modules", "cypress"]
}

